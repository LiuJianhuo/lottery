/* components/will-used/modal/index.wxss */
.modal {
  display: none;
  width: 560rpx;
  height: 608rpx;
  position: fixed;
  /* margin-left: 95rpx; */
  z-index: 10000;
  background-color: #fff;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%)
}

.modal.show {
  display: block;
}

.modal-top {
  box-sizing: border-box;
  width: 560rpx;
  height: 100rpx;
  padding: 30rpx 32rpx;
  background-color: #FD3069;
}

.modal-top-left {
  width: 55rpx;
  height: 40rpx;
  float: left;
}

.modal-top-right {
  width: 44rpx;
  height: 44rpx;
  float: right;
}

.modal-foot {
  padding: 42rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.modal-code {
  width: 310rpx;
  height: 320rpx;
}

.modal-txt {
  width:407rpx;
  height:72rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(111,111,111,1);
  line-height:36rpx;
}

