/* pages/index/modal/index.wxss */

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  width:560rpx;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  transform: translate(-50%, -50%);
  z-index: 30000; 
  display: none;
}

.modal.show {
  display: block;
}

.modal .success-btn {
  width: 100%;
  height: 100rpx;
}

.modal__btn-wrap {
  width: 100%;
  height: 100rpx;
  display: flex;
}

.modal__btn {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,36,83,1);
}

.modal__content {
  position: relative;
  padding-top: 50rpx;
  padding-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(53,53,53,1);
  flex-direction: column;
}

.modal__content::after {
  position: absolute;
  content: ' ';
  display: block;
  left: 0rpx;
  bottom: 1rpx;
  width: 100%;
  height: 1rpx;
  opacity: .6;
  background:rgba(229,229,229,1);
}

