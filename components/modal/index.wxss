/* components/model/index.wxss */

.modal {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 560rpx;
  background-color: #ffffff;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  z-index: 35000;
  display: none;
}

.modal.show {
  display: block;
}

.modal .modal__btns {
  display: flex;
  width: 100%;
  height: 100rpx
}

.modal__content-wrap {
  position: relative;
}

.modal__content::after {
  position: absolute;
  content: ' ';
  display: block;
  left: 0rpx;
  bottom: 1rpx;
  width: 100%;
  height: 1rpx;
  background:rgba(229,229,229,.3);
}

.modal__content {
  padding: 50rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}

.modal__btn {
  flex: 1;
}


.modal__btn button {
  padding: 0;
  width:auto;
  height: 100rpx;
  line-height: 100rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  /* color:rgba(255,255,255,1); */
  background: #ffffff;
  border-radius:8rpx;
}

.modal__btn button:not([size='mini']) {
  min-height: 0;
  height:100rpx;
  margin-left: 0;
  margin-right: 0;
  line-height: 100rpx;
  width: auto;
}
