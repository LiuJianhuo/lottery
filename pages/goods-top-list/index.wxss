/* pages/test-api/index.wxss */
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}

.kdj-tab__panel {
  padding-top: 80rpx;
}

.kdj-navbar {
  width: 100%;
  display: flex;
  position: fixed;
  z-index: 100;
  background-color: #ffffff;
}
.kdj-navbar .kdj-navbar__item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(111,111,111,1);
  line-height:80rpx;
}

.kdj-navbar .kdj-navbar__item.active {
  color:rgba(255,36,83,1);
}

.triangle-icon-wrap {
  margin-left: 8rpx;
}

.triangle-icon {
  border: 7rpx solid transparent;
}

.triangle-icon__up {
  border-bottom: 7rpx solid rgba(111,111,111,1);
  margin-bottom: 10rpx;
}

.triangle-icon__down {
  border-top: 7rpx solid rgba(111,111,111,1);
}

.kdj-navbar__item.active .triangle-icon__down.active {
  border-top-color: rgba(255,36,83,1);
}

.kdj-navbar__item.active .triangle-icon__up.active {
  border-bottom-color: rgba(255,36,83,1);
}

/* 商品项 */
.goods-list-item {
  margin-bottom: 20rpx;
  display: block;
}

/* 加载更多 */
.weui-loadmore {
  width: 65%;
  margin: 20rpx auto;
  font-size: 14px;
  text-align: center;
  position: relative;
  line-height: 1em;
  margin-top: 40rpx;
  /* display: none; */
}

.weui-loadmore.weui-loadmore_line {
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.weui-loadmore.weui-loadmore_line .weui-loadmore__tips {
  margin-top: -1em;
  background-color: #FFFFFF;
  padding: 0rpx 16rpx;
}

.weui-loadmore.active {
  display: block;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color: rgba(111,111,111,1);
}

.weui-loading {
  margin: 0 5px;
  width:20px;
  height:20px;
  display: inline-block;
  vertical-align: middle;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes weuiLoading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}