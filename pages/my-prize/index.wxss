/* 导航部分 */

.daohang {
	position: relative;
  height: 100%;
}

.movie-container{
   display: flex;
   flex-direction: column;
   /* position: absolute; */
 }
 .navbar{
   display: flex;
   position: absolute;
   left: 0;
   top: 0;
   z-index: 500;
   width: 100%;
   height: 50px;
   flex-direction: row;
   text-align: center;
   color: #A8A8A8;
   font-size: 15px;
   box-sizing: border-box;
   background-color: #FFF;
   border-bottom: 1rpx solid #DFDFDF;
 }
 .navbar-item{
   flex: 1;
   padding: 26rpx 0px;
 }
 .navbar-item-active{
   transition: all 0.3s;
   border-bottom: 10rpx solid #FD3069;
   color: #FD3069;
 }
 
 .movie-content-wrapper{
   padding-top: 50px;
   height: 100%;
 }
 
 .jkj {
   height: calc(100vh - 165px );
 }

 .hgh {
   width: 100%;
   height: calc(100vh - 165px );
 }

 .mask {
   position: fixed;
   height: 100vh;
   width: 100vw;
   background:rgba(0,0,0,0.5);
   z-index: 9999;
   display: none;
 }

 .mask.show {
   display: block;
 }