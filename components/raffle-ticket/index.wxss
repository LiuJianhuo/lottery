/* components/raffle-ticket/index.wxss */

.raffle-ticket {
  position: relative;
  width:136rpx;
  height:89rpx;
  background:linear-gradient(0deg,rgba(248,53,114,1),rgba(251,93,175,1));
  box-shadow:0px 3rpx 7rpx 0px rgba(0, 0, 0, 0.2);
  border-radius:10rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.bg-color-one {
  background:linear-gradient(0deg,rgba(17,194,115,1),rgba(12,216,170,1));
}

.bg-color-two {
  background:linear-gradient(0deg,rgba(248,53,114,1),rgba(251,93,175,1));
}

.bg-color-three{
  background:linear-gradient(0deg,rgba(150,101,255,1),rgba(210,98,249,1));
}

.bg-color-four {
  background:linear-gradient(0deg,rgba(8,137,207,1),rgba(37,183,253,1));
}

.raffle-ticket__amount {
  font-size:27rpx;
  /* font-family:zihun143; */
  font-weight:400;
  color:rgba(255,255,255,1);
  font-family: zihun143-zhengkuchaojihei;
                            
}

.raffle-ticket__amount-prefix {
  font-size:27rpx;
  padding-right: 2rpx; 
}

.raffle-ticket__name {
  font-size:22rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.raffle-ticket__circle {
  display: block;
  width: 16rpx;
  height: 18rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: 50%;
}

.raffle-ticket__circle.left {
  left: 0;
  transform: translate(-50%, -50%)
}

.raffle-ticket__circle.right {
  right: 0;
  transform: translate(50%, -50%);
}

