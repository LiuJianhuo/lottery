/* pages/goods-detail/index.wxss */
page,
.page,
.page__bd{
  height: 100%;
}
.page__bd{
  
  padding-bottom: 0;
}

/* 商品 */
.goods-img {
  width: 750rpx;
  height: 750rpx;
}

.back-icon {
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.goods-item .goods-item__price-wrap {
  display: block;
}

.goods-item .goods-item__discount-price {
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color: #FF2453;
  border-radius: 6rpx;
}
.goods-item .goods-item__ctn-bottom {
  /* display: table-cell;
  vertical-align: middle;
  width: 100%; */
  position: absolute;
  width: 100%;
  bottom: 0px;
}
.goods-item .goods-item__price {
  font-size:22rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color: rgba(153,153,153,1);
  text-decoration: line-through;
}

.goods-item .goods-imgs_item {
  width: 700rpx;
  height: 700rpx;
}
.goods-item .main {
  padding: 12rpx 25rpx;
}

.goods-item .goods-title {
  font-size:32rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  line-clamp: 2;
  word-break: break-all;
  padding-right: 6rpx;
}

.goods-item .goods-desc-wrap {
  background-color: rgba(235, 231, 231);
  text-align: center;
  box-sizing: border-box;
  padding: 20rpx 18rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.goods-item__desc {
  text-align: justify;
  /* color: rgb(71, 71, 71); */
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color: rgb(77, 75, 75);
}

.goods-item .goods-desc__title-wrap {
  color: #6F6F6F;
  position: relative;
  width: 380rpx;
  height: 4rpx;
  background-color: black;
  margin: 40rpx auto;
  background: linear-gradient(to right,  rgba(94, 94, 94, 0), rgb(95, 94, 94) 30%, rgb(95, 94, 94) 70%, rgba(94, 94, 94, 0));
  /* background: linear-gradient(blue, 50%, pink); */
}

.goods-item .goods-desc__title {
  position: absolute;
  top: 50%;
  left: 50%;
  /* width: 290rpx; */
  transform: translate(-50%, -50%);
  z-index: 100;
  background-color: rgb(235, 231, 231);
  padding: 0rpx 12rpx;
  white-space:nowrap;
}

.goods-item .goods-item__coupon {
  background-color: rgb(255, 192, 203);
  background: linear-gradient(45deg, rgb(255, 192, 203), rgb(243, 175, 187));
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  margin-top: 12rpx;
  color: #FFFFFF;
}